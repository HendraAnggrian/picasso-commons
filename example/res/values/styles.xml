<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="errorbarStyle">@style/App.Errorbar</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="App.PaletteToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="App.Errorbar" parent="Widget.Errorbar">
        <item name="background">@drawable/errorbar_bg_cloud</item>
        <item name="android:src">@drawable/errorbar_ic_cloud</item>
    </style>
</resources>